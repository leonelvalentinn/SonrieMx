---
interface Props {
  title: string
  description?: string
  icon?: string
  className?: string
}

const { title, description, icon, className } = Astro.props
---

<a title={`Agendar mi cita para iniciar mi tratamiento de ${title}`} href="/" target="_blank" rel="noopener noreferrer" class={`flex flex-col items-end px-5 rounded-[19px] transition bg-white text-slate-900 ${description ? 'py-5' : 'py-8'} ${className} hover:bg-yellow-500`}>
  <h3 class={`text-2xl font-bold w-full flex ${description ? 'items-start' : 'justify-center'}`}>{title}</h3>
  {description ? <p class="text-sm mt-4">{description}</p> : ''}
  {icon ? <img src={icon} alt={`Icono de ${title}`} class="w-1/2 max-w-56" /> : ''}
</a>