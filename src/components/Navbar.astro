---
import Close from "./icons/Close.astro"
import Menu from "./icons/Menu.astro"
import Facebook from "./icons/Facebook.astro"
import Instagram from "./icons/Instagram.astro"
---

<header class="w-full flex justify-center items-start">
  <nav class="w-full flex justify-between items-center max-w-7xl px-4 py-2">
    <a href="/" class="flex w-48">
      <img width="1114" height="1030" src="/logo-gold.webp" alt="Logo de SonrÃ­e MX en color dorado" class="w-full aspect-auto">
    </a>
    <button class="" aria-label="Abrir menu desplegable" id="open-menu">
      <Menu class="w-10" />
    </button>
    <div class="w-full h-svh fixed top-0 right-0 transition scale-x-0 origin-right duration-300 z-10" id="menu-dropdown">
      <div class="w-11/12 h-svh bg-black/90 absolute top-0 right-0 flex flex-col justify-center items-start gap-6 pt-14 px-6 pb-6">
        <button class="absolute top-10 right-10">
          <Close class="w-8" />
        </button>
        <a href="/" class="font-semibold text-2xl">Inicio</a>
        <a href="#Nosotros" class="font-semibold text-2xl">Nosotros</a>
        <a href="#Servicios" class="font-semibold text-2xl">Servicios</a>
        <a href="tel:5555555555" class="font-semibold text-2xl">Contacto</a>
        <div class="flex gap-4">
          <a href="http://" target="_blank" rel="noopener noreferrer">
            <Facebook class="w-8 fill-white" />
          </a>
          <a href="http://" target="_blank" rel="noopener noreferrer">
            <Instagram class="w-8 fill-white" />
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const $btnOpenMenu = document.getElementById('open-menu')
  const $menuDropdown = document.getElementById('menu-dropdown')

  $btnOpenMenu?.addEventListener('click', () => {
    $menuDropdown?.classList.add('scale-x-100')
  })

  $menuDropdown?.addEventListener('click', () => {
    $menuDropdown?.classList.remove('scale-x-100')
  })
</script>